---
interface Props {
    name: string;
    image: string;
    role: string;
}

const { name, image, role }: Props = Astro.props;
---
<div class="w-1/6 bg-black border-gray-800 border-2 rounded-md p-8 flex flex-col gap-4 justify-center items-center">
    <img src={image} alt={name} class="h-16 w-16 rounded-full hover:animate-spin" />
    <h2>{name}</h2>
    <p>{role}</p>
</div>